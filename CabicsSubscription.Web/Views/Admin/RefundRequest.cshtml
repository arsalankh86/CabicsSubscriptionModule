
@{
    ViewBag.Title = "RefundRequest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>RefundRequest</h2>
<form id="payment-form" method="post" action="/Admin/SubmitRefund">



    <div id="dvRefundReq" name="dvRefundReq">

        <input type="hidden" name="hdnmode" id="hdnmode" />
        <input type="hidden" name="hdntransactionid" id="hdntransactionid" />


        <input type="radio" class="radio" name="gender" value="1" checked onclick="Click()"> Ful Refund<br>
        <input type="radio" class="radio" name="gender" value="2" onclick="Click()" > Partial Refund<br>


